generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          String @id @default(uuid())
  email       String @unique
  password    String 
  username    String @unique
  displayName String @map("display_name")

  avatar String?
  bio    String?

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("users")
}
